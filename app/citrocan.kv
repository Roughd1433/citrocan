  Label:
    pos: 285, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    strikethrough: True
    text: app.d_ta

  Label:
    pos: 395, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    strikethrough: True
