#:kivy 1.9.0

FloatLayout:
  orientation: 'horizontal'

  canvas.before:
    Color:
      rgba: .95, .7, 0, 1
    Rectangle:
      size: self.size

  canvas:
    Color:
      rgba: 0, 0, 0, .5
    Line:
      points: 0, 0, 531, 0, 531, 131, 0, 131
      width: 1
      close: True
    Color:
      rgba: 0, 0, 0, 1
    Line:
      points: 170, 1, 170, 130
      width: 1.2
    Line:
      points: 250, 70, 250, 20, 530, 20
      width: 1.2

  Label:
    pos: 0, 10
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 20
    text_size: 170, None
    halign: "center"
    text: app.d_date

  Label:
    pos: 0, 40
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 40
    font_name: 'DejaVuSans'
    text_size: 170, None
    halign: "center"
    bold: True
    text: app.d_time

  Label:
    pos: 170, 73
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 22
    text_size: 80, None
    halign: "center"
    text: app.d_band

  Label:
    pos: 250, 70
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 30
    bold: True
    text: app.d_name

  Label:
    pos: 255, 45
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 22
    text: app.d_info

  Label:
    pos: 255, 22
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 17
    text: app.d_title

  Label:
    pos: 500, 77
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 20
    text: app.d_dx

  Label:
    pos: 447, 22
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 17
    text_size: 80, None
    halign: "right"
    text: app.d_ptyname

  Label:
    pos: 475, 75
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    text: "MEM" if app.d_memch else ""

  Label:
    pos: 513, 71
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 30
    bold: True
    text: app.d_memch

  Label:
    pos: 180, 108
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 17
    markup: True
    text: app.d_vol

  Label:
    pos: 480, 108
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 17
    markup: True
    text: app.d_temp

  Label:
    pos: 255, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1 if app.d_rds_ok else .5
    font_size: 16
    text: app.d_rds

  Label:
    pos: 295, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1 if app.d_ta_ok else .5
    font_size: 16
    text: app.d_ta

  Label:
    pos: 330, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1 if app.d_pty_ok else .5
    font_size: 16
    text: app.d_pty

  Label:
    pos: 375, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    text: app.d_rdtxt_rnd

  Label:
    pos: 440, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1 if app.d_rds_ok else .5
    font_size: 16
    text: app.d_reg

  Label:
    pos: 485, 0
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    text: app.d_loud

  Image:
    pos: 175, 5
    size_hint: None, None
    size: 70, 66
    source: 'assets/'+app.d_icon+'.png'

  ProgressBar:
    pos: 171, 107
    size_hint: None, None
    size: 360, 0
    max: 30
    value: app.d_volbar

  Label:
    canvas.before:
      Color:
        rgba: .4, .2, .4, .9
      Rectangle:
        size: 500, 100
        pos: 15, 15

    color: .9, .9, 1, 1
    font_size: 20
    text: app.d_alert
    text_size: 470, None
    halign: "center"
    opacity: 1 if app.d_alert else 0
