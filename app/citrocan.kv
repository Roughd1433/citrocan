#:kivy 1.9.0

FloatLayout:
  orientation: 'horizontal'

  canvas.before:
    Color:
      rgba: .95, .7, 0, 1
    Rectangle:
      size: 531, 131

  canvas:
    Color:
      rgba: 0, 0, 0, .5
    Line:
      points: 0, 0, 531, 0, 531, 131, 0, 131
      width: 1
      close: True
    Color:
      rgba: 0, 0, 0, 1
    Line:
      points: 170, 1, 170, 130
      width: 1.2
    Line:
      points: 170, 107, 530, 107
      width: 1.2
    Line:
      points: 250, 70, 250, 20, 530, 20
      width: 1.2

  Label:
    pos: 10, 10
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 20
    text: app.d_date

  Label:
    pos: 30, 40
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 40
    font_name: 'DejaVuSans'
    bold: True
    text: app.d_time

  Label:
    pos: 173, 73
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 22
    text: app.d_band

  Label:
    pos: 250, 70
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 30
    bold: True
    text: app.d_name

  Label:
    pos: 255, 45
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 22
    text: app.d_info

  Label:
    pos: 475, 75
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 16
    text: "MEM" if app.d_memch else ""

  Label:
    pos: 513, 71
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 30
    bold: True
    text: app.d_memch

  Label:
    pos: 180, 108
    size_hint: None, None
    size: self.texture_size
    color: 0, 0, 0, 1
    font_size: 17
    markup: True
